<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zafar.sartcrowd.fragments.CheckoutFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:paddingTop="@dimen/activity_half_horizontal_margin"
        tools:context=".MainActivity"
        android:id="@+id/checkout_relative">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/list_checkout"
                android:layout_weight="8"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            </ListView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_below="@id/list_checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="Proceed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Proceed"
                    android:background="@drawable/border_button"
                    android:textColor="#ffffff"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
